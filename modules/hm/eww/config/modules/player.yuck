(defwidget player-widget []
  (box
    :space-evenly "false"
    (box
      :class "cover-art"
      :style { "background-image: url('" + (artUrl != "" ? artUrl : "${EWW_CONFIG_DIR}/assets/music-solid.png") + "');" }
      :tooltip {artUrl}
    )
    (box
    :orientation "v"
    :class "song-info"
    "${title}"
    "${artist}"
    )
  )
)

(defwindow player-window
  :monitor "eDP-1"
  :stacking 'fg'
  :geometry (geometry :x 60 :y 20 :anchor "bottom left")
  (player-widget)
)
